{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Firmware",
            "type": "shell",
            "group": {
                "kind": "build"
            },
            "command": "make COMPILE=gcc BOOT=new APP=1 SPI_SPEED=40 SPI_MODE=DIO SPI_SIZE_MAP=${config:esp.SPI_FLASH_SIZE_MAP}",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "flashing",
            "type": "shell",
            "command": "esptool.py --port ${config:esp.target.port} -b ${config:esp.target.baudrate} write_flash --flash_mode dio 0x00000 ../bin/boot_v1.7.bin 0x01000 ../bin/upgrade/user1.4096.new.6.bin 0x3fc000 ../bin/esp_init_data_default_v08.bin 0x3fe000 ../bin/blank.bin 0x3fb000 ../bin/blank.bin",
            "problemMatcher": []
        }
    ],
} 